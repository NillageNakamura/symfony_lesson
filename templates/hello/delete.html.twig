{% extends 'base.html.twig' %}

{% block page %}{{title}}{% endblock %}
{% block title %}{{title}}{% endblock %}

{% block body %}
<h2>{{message}}</h2>
<h3>Person table</h3>
<table>
    <tr><th>ID</th><td>{{data.id}}</td></tr>
    <tr><th>Name</th><td>{{data.name}}</td></tr>
    <tr><th>Mail</th><td>{{data.mail}}</td></tr>
    <tr><th>Age</th><td>{{data.age}}</td></tr>
</table>
{{ form_start(form) }}
{{ form_widget(form) }}
{{ form_end(form) }}
{% endblock %}
